<%- include('../partials/header') %>

<div class="groups-wrapper">
  <aside class="sidebar">
    <nav class="sidebar-nav">
      <a href="/dashboard">Dashboard</a>
      <a href="/explorer">Interest Explorer</a>
      <a href="/groups" class="active">Groups</a>
      <a href="/forums">Forums</a>
      <a href="/events">Events</a>
      <a href="/settings">Settings</a>
    </nav>
  </aside>

  <main class="groups-main" data-user-id="<%= user ? user.user_id : 1 %>">
    <h1>Find and Join Groups</h1>
    <p>Connect with people who love what you love!</p>

    <div id="group-list" class="group-grid">
      <!-- Groups will be dynamically injected here -->
    </div>
  </main>
</div>

<%- include('../partials/footer') %>

<script>
  const userId = document.querySelector('.groups-main').dataset.userId;

  async function fetchGroups() {
    try {
      const response = await fetch('http://127.0.0.1:5000/api/groups');
      const groups = await response.json();

      const container = document.getElementById('group-list');
      container.innerHTML = groups.map(group => `
        <div class="group-card">
          <h3>${group.Name}</h3>
          <p>${group.Description || 'No description available.'}</p>
          <button onclick="joinGroup(${group.Group_ID})">Join</button>
        </div>
      `).join('');
    } catch (err) {
      console.error('Error fetching groups:', err.message);
    }
  }

  async function joinGroup(groupId) {
    try {
      const res = await fetch('http://127.0.0.1:5000/api/groups/join', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          user_id: userId,
          group_id: groupId
        })
      });

      const data = await res.json();
      if (res.ok) {
        alert('Successfully joined group!');
      } else {
        alert(data.error || 'Could not join group.');
      }
    } catch (err) {
      alert('Error connecting to server: ' + err.message);
    }
  }

  fetchGroups();
</script>

<style>
  .groups-main {
    flex: 1;
    margin-left: 0px; /* matches sidebar width */
    padding: 2rem 2rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
  }
  
  .groups-content {
    max-width: 960px;
    width: 100%;
    text-align: center;
  }
  
  .groups-content h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  
  .groups-content p {
    margin-bottom: 1.5rem;
    color: #555;
  }
  
  .groups-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    width: 100%;
    justify-content: center;
  }
  
  .group-card {
    background: #fff;
    padding: 1.2rem;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    text-align: center;
    transition: transform 0.2s ease;
  }
  
  .group-card:hover {
    transform: translateY(-4px);
  }
  
  .group-card h3 {
    margin-bottom: 0.4rem;
    font-size: 1.1rem;
    color: #333;
  }
  
  .group-card p {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 0.8rem;
  }
  
  .group-card button {
    background-color: #28a745;
    color: #fff;
    border: none;
    padding: 6px 14px;
    border-radius: 5px;
    cursor: pointer;
    font-weight: 500;
  }
  
  .group-card button:hover {
    background-color: #218838;
  }
  
  .group-card button:active {
    transform: scale(0.95);
  }
  </style>
  