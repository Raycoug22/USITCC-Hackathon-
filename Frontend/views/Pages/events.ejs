    display: block;
    color: white;
    padding: 10px 0;
    text-decoration: none;
  }

  .sidebar-nav a.active {
    background-color: #f47e3e;
    border-radius: 4px;
    padding-left: 10px;
  }

  .events-main {
    flex: 1;
    padding: 2.5rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .events-content {
    max-width: 960px;
    width: 100%;
    text-align: center;
  }

  .events-content h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .events-content p {
    color: #555;
    margin-bottom: 2rem;
  }

